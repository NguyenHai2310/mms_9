<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t "show.form" %> <%= pluralize object.errors.count, t("show.error") %>
      <ul>
        <% object.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
