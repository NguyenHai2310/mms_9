<% provide :title, @user.username %>
<h1 class="user-info"><%= t "user.info" %></h1>
<div class="row">
  <div class="col-md-4">
    <aside class="user_info">
      <p>
        <strong><%= t "user.user_name" %></strong>
        <%= @user.username %>
      </p>

      <p>
        <strong><%= t "user.email" %></strong>
        <%= @user.email %>
      </p>

      <p>
        <strong><%= t "user.birthday" %></strong>
        <%= @user.birthday %>
      </p>

      <p>
        <strong><%= t "user.type" %></strong>
        <%= @user.role %>
      </p>

      <p>
        <strong><%= t "user.position" %></strong>
        <% @user.positions.each do |p| %>
          <%= p.name %>
        <% end %>
      </p>
    </section>
  </div>
  <div class="col-md-8">
    <% if @user.skills.any? %>
      <h3><%= t "skilluser.skill" %>(<%= @user.skills.count %>)
        <% if current_user? @user %>
          <%= link_to " ", user_skills_path(@user), class: "glyphicon glyphicon-plus" %>
        <% end %>
      </h3>
      <table class="table">
        <tr>
          <th><%= t "skill.name" %></th>
          <th><%= t "skill.level" %></th>
          <th><%= t "skill.year" %></th>
        </tr>
        <% @user.skill_users.each do |skill_u| %>
          <tr>
            <td><%= skill_u.skill.name %></td>
            <td><%= skill_u.level %></td>
            <td><%= skill_u.year %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
