<% provide :title, @user.username %>
<% if current_user? @user %>
  <%= link_to t("user.edit"), user_skills_path(@user) %>
<% end %>
<div class="row" >
  <aside class="col-md-4" >
    <section class="user_info" >
      <p>
        <strong><%= t "user.user_name" %></strong>
        <%= @user.username %>
      </p>

      <strong>
        <%= t "user.email" %>: <%= @user.email %><br>
      </strong>

      <p>
      <strong><%= t "user.birthday" %></strong>
        <%= @user.birthday %>
      </p>

      <p>
        <strong><%= t "user.type" %></strong>
        <%= @user.role %>
      </p>

      <p>
        <strong><%= t "user.position" %></strong>
        <% @user.positions.each do |p| %>
          <%= p.name %>
        <% end %>
      </p>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.skills.any? %>
      <h3><%= t "skilluser.skill" %>(<%= @user.skills.count %>)</h3>
      <ol>
        <% @user.skills.each do |skill| %>
          <li><%= skill.name %></li>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>
