<% provide :title, t("user.edit_profile") %>
<h1><%= t "user.edit_user" %> </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @user] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label t "user.username" %>
      <%= @user.username %><br>

      <%= f.label t "user.email" %>
      <%= @user.email %><br>

      <%= f.label t "user.birthday" %>
      <%= f.datetime_field :birthday, class: "form-control" %>

      <%= f.label t "user.type" %>
      <%= f.select :role, Settings.user.role %><br/>

      <%= f.fields_for :position_users do |p| %>
        <%= p.label :position_id, t "user.position" %>
        <%= p.collection_select :position_id, Position.all, :id, :name %><br/>
      <% end %>

      <%= f.submit t("button.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
