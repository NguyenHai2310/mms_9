<% provide :title, t("user.edit_profile") %>
<h1><%= t "user.edit_user" %> </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @user] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :username %>
      <%= @user.username %><br>

      <%= f.label :email %>
      <%= @user.email %><br>

      <%= f.label :role %><br/>
      <%= f.select :role, Settings.user.role %>

      <%= f.submit t "user.save_changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
