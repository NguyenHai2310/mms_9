<div class="breadcrumb row">
  <div class="col-md-5 col-md-offset-1"><%= skill.name %></div>
  <div class="col-md-1">
    <%= link_to t("button.edit"), [:edit, :admin, skill],
      class: "btn btn-success" %>
  </div>
  <div class="col-md-2"><%= link_to t("button.delete"), [:admin, skill],
    method: :delete, data: {confirm: t("skill.confirm.delete")},
    class: "btn btn-success" %>
  </div>
</div>
