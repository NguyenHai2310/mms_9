<div class="row" >
  <div class="col-md-6 col-md-offset-3" >
    <%= form_for [:admin, @position] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label t "position.name" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label t "position.abbreviation" %>
      <%= f.text_field :abbreviation, class: "form-control" %></br>
      <%= f.submit t("position.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
